<p class="notice"><%= notice %></p>

<% content_for :title, "Products" %>

<h1>Products</h1>

<div id="products">
  <% @products.each do |product| %>
    <%= render product %>
    <p>
      <%= link_to "Show this product", product, class: "btn btn-show" %>
    </p>
  <% end %>
</div>

<%= link_to "New product", new_product_path, class: "btn btn-new" %>
